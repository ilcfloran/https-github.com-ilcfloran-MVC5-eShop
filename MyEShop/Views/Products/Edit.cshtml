            @Html.LabelFor(model => model.Onsale, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Onsale)
                    @Html.ValidationMessageFor(model => model.Onsale, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

