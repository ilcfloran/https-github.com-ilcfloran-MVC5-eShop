@model MyEShop.Web.ViewModels.CartVM
@{
    ViewBag.Title = "Purchase History";
}

@if (Model.CartItems != null)
{
    <section id="cart_items">
        <div class="container">
            <div class="breadcrumbs">
                <ol class="breadcrumb">
                    <li><a href=@Url.Action("Index", "Home")>Home</a></li>
                    <li class="active">Purchase History</li>
                </ol>
            </div>
            <div class="table-responsive cart_info">
                <table class="table table-condensed">
                    <thead>
                        <tr class="cart_menu">
                            <td class="image">Item</td>
                            <td class="description">Name</td>
                            <td class="price">Price</td>
                            <td class="quantity">Quantity</td>
                            <td class="total">Total</td>
                            <td class="description">Status</td>
                            <td class="description">Tracking Code</td>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.CartItems)
                        {
                            <tr>
                                <td class="cart_product">
                                    <p>Date: @item.Date</p>
                                </td>
                                <td class="cart_description">
                                    <h4><a>@item.ProductName</a></h4>
                                    <p>Web ID: @item.WebId</p>
                                </td>

                                <td class="cart_price">
                                    <p>$@item.Price</p>
                                </td>
                                <td class="cart_quantity">
                                    <div class="cart_quantity_button">

                                        <input class="cart_quantity_input" type="text" name="quantity" data-webId="@item.WebId" value="@item.Count" autocomplete="off" size="2">

                                    </div>
                                </td>
                                <td class="cart_total">
                                    <p class="cart_total_price">$@(item.Count * item.Price)</p>
                                </td>
                                <td class="cart_description">
                                    <h4><a>@item.StatusId</a></h4>
                                </td>

                                <td class="cart_description">
                                    <h4><a>@item.TrackingCode</a></h4>
                                </td>
                            </tr>
                        }
                        <tr>
                            <td class="cart_product">
                                <a href=""></a>
                            </td>
                            <td class="cart_description"> <p>&nbsp;</p></td>

                            <td class="cart_price"> <p>&nbsp;</p></td>

                            <td class="cart_quantity"></td>

                            <td class="cart_total">
                                <p class="cart_total_price">$@Model.TotalPrice</p>
                            </td>
                        </tr>

                    </tbody>
                </table>
            </div>
        </div>
    </section>
}
else
{
    <p>No item found.</p>
}